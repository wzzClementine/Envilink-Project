/**index.wxss**/
.swiperView{
 
}
.swiperItem{
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}
.swiperImage{
  height: 100%;
  width: 100%;
}

.navigation{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 3%;
  flex-wrap: wrap;
}
.navigationView{
  text-align: center;
  width: 20%;
  margin: 3%;
  background-color: gainsboro;
  border: 1px solid gainsboro;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  padding: 2%;
  font-size: 14px;
  
}
.passageView{
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}
.corePassageView{
  display: flex;
  flex-direction: column;
  height: 30%;
  width: 42%;
  background-color: #f3f9f1;
  padding: 2%;
  margin: 2%;
}
.passageImage{
 height: 80px;
 width: 100%;
}
.passageTitle{
  margin-top: 5%;
  margin-bottom: 5%;
  font-size: 14px;
  font-weight: 600;
}
.passageAuthor{
  margin-bottom: 4%;
  font-size: 10px;

}
.passageDetail{
  font-size: 12px;
  width:100%;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}
.passageExpand{
  margin-top: 4%;
  height: 18px;
  width: 50px;
  font-size: 10px;
  background-color: #87AF4C;
  color: white;
  text-align: center;
}