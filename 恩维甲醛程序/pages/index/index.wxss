.hide {
    display: none
}
.line-control {
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}
.line-control .item {
    box-sizing: border-box;
    text-align: left;
    color: #007AFF;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative
}
.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid;
    height: 90rpx;
    line-height: 90rpx;
}






.swiperView{
 
}
.swiperItem{
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}
.swiperImage{
  height: 100%;
  width: 100%;
}

.navigation{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 3%;
  flex-wrap: wrap;
}
.navigationView{
  text-align: center;
  width: 20%;
  margin: 3%;
  background-color: gainsboro;
  border: 1px solid gainsboro;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  padding: 2%;
  font-size: 14px;
  
}
.passageView{
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}
.corePassageView{
  display: flex;
  flex-direction: column;
  height: 30%;
  width: 42%;
  background-color: #f3f9f1;
  padding: 2%;
  margin: 2%;
}
.control{
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}
.passageImage{
 height: 80px;
 width: 100%;
}
.passageTitle{
  margin-top: 5%;
  margin-bottom: 5%;
  font-size: 14px;
  font-weight: 600;
}
.passageAuthor{
  margin-bottom: 4%;
  font-size: 10px;

}
.passageDetail{
  font-size: 12px;
  width:100%;
  height:50px;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
}
.passageExpand{
  margin-top: 4%;
  height: 18px;
  width: 50px;
  font-size: 10px;
  background-color: #87AF4C;
  color: white;
  text-align: center;
}