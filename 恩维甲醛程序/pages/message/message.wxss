/* pages/message/message.wxss */
.login{
  display: flex;
  flex-direction: column;
  margin-top: 40%;
  align-items: center;
  font-size: 17px;
  color: #bfbfbf;
}
.mes{
  margin-bottom: 10%;
  height: 170rpx;
  width: 170rpx;
}
.navigationBar{
 display: flex;
 flex-direction: row;
 justify-content: center;
 align-items: center;
 align-content: center;
 width: 90%;
 margin: 3%;
 margin-bottom: 6%;
 border: 1px solid #87AF4C;

}
.naviViewSelected{
  width: 25%;
  padding: 1%;
  text-align: center;
  background-color: #87AF4C;
  color: white;
}
.naviView{
  width: 25%;
  padding: 1%;
  text-align: center;
  color: black;
}
.commentList{
  display: flex;
  flex-direction: row;
  height: 33.33%;
  padding: 2%;
  width: 100%;
  border-bottom: 1PX solid #E6E6E6;
}
.leftPart{
  display: flex;
  flex-direction: column;
  width: 60%;
}
.userInfo{
  display: flex;
  flex-direction: row;
}
.userName{
  display: flex;
  flex-direction: column;
  margin-left: 5%;
}
.userAvatar{
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;

}
.name{
  font-size: 17px;
}
.time{
 font-size: 10px;
 color: gray;
}
.commentDetails{
 font-size: 14px;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  margin: 2%;
  margin-right: 5%;
}
.rightPart{
  width:35%;
  
}
.postDetails{
  font-size: 13px;
  width: 100%;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:4;
  -webkit-box-orient:vertical;
  overflow:hidden;
}