/* pages/mine/mine.wxss */
.userinfo-avatar{
  border-radius: 50%;
  border: 2px solid #88b04b;
  height: 180rpx;
  width: 180rpx;
}
.personInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  align-self: center;
  margin-top: 10%;
}
.userinfo-nickname{
  margin-top: 5%;
  font-weight: 500;
}
.function{
  display: flex;
  flex-direction: column;
  margin-top: 15%;
  border-top: 2px solid #F0F0F0;
}
.function_part{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 3% 0 3% 10%;
  border-bottom: 2px solid #F0F0F0;
}
.icon{
  height: 20px;
  width: 20px;
}
.icon01{
  height: 15px;
  width: 15px;
  position: fixed;
  right: 7%;
}
.function_text{
  font-size:17px;
  margin-left:3%;
  font-weight: 500;
}